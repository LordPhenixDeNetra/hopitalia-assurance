# Example environment configuration for Hopitalia Assurance API

# Project metadata
PROJECT_NAME="Hopitalia Assurance API"

# CORS allowed origins (JSON array)
# Replace or add your frontend URLs (no trailing slashes)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:5173","http://127.0.0.1:5173"]

# API prefix (versioning)
# Leave API_PREFIX empty to compose automatically from base/version
API_PREFIX=""
API_BASE_PREFIX="/api"
API_VERSION="v1"

# Database configuration
# Example Postgres URL using psycopg v3 driver
# postgresql+psycopg://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=
DB_ECHO=false